<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_10"
        android:orientation="vertical"
        tools:context=".Activity.ContactUs">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/contactus_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red_500"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:navigationIcon="@drawable/ic_white_arrow"
            app:titleTextColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_25sdp"
                                app:srcCompat="@drawable/ic_email_black_24dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="bloodplus.stepup\n@gmail.com"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15sdp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/ic_red_call" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="+91 997 8402 738\n+91 972 7244 709\n+91 738 3710 711"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15sdp" />


                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_red_location" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="A-220 Sicilia Business Center,\n Mota Varachha Surat,\n Gujarat 394101"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_10sdp"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/shape_red_border"
                            android:gravity="center"
                            android:layout_margin="@dimen/_20sdp"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_2sdp">


                            <!--<com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_minus4sdp"
                                android:layout_marginRight="@dimen/_minus4sdp"
                                android:hint="Full Name"
                                android:textColorHint="@color/black">-->

                                <EditText
                                    android:id="@+id/edtname"
                                    android:hint="Full Name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/red_500"
                                    android:theme="@style/EditText.Grey" />
                           <!-- </com.google.android.material.textfield.TextInputLayout>-->


                            <!--<com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_minus4sdp"
                                android:layout_marginRight="@dimen/_minus4sdp"
                                android:hint="Mobile Number"
                                android:textColorHint="@color/black">-->

                                <EditText
                                    android:id="@+id/edtemail"
                                    android:hint="Mobile Number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textEmailAddress"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/red_500"
                                    android:theme="@style/EditText.Grey" />
                            <!--</com.google.android.material.textfield.TextInputLayout>-->


                            <!--<com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_minus4sdp"
                                android:layout_marginRight="@dimen/_minus4sdp"
                                android:hint="Message"
                                android:textColorHint="@color/black">-->

                                <EditText
                                    android:id="@+id/edtmsg"
                                    android:hint="Enter Your Message"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:maxLines="10"
                                    android:singleLine="true"
                                    android:textColor="@color/red_500"
                                    android:theme="@style/EditText.Grey" />
                           <!-- </com.google.android.material.textfield.TextInputLayout>-->

                            <Button
                                android:id="@+id/send_message"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/shape_btn_red"
                                android:padding="@dimen/_15sdp"
                                android:text="Send Message"
                                android:textColor="@color/white"/>


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>


    </LinearLayout>

</layout>